{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "lib": ["ES2020", "DOM"],
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./bin",
        "rootDir": "./src",
        "strict": true,
        "composite": true,
        "incremental": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "tsBuildInfoFile": "./bin/.tsbuildinfo"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "bin", "dist"],
    "references": [
        { "path": "../core" },
        { "path": "../engine-core" },
        { "path": "../sprite" },
        { "path": "../camera" },
        { "path": "../asset-system" }
    ]
}

{
    "name": "@esengine/runtime-core",
    "version": "1.0.0",
    "description": "Runtime core - plugin management and system initialization",
    "main": "dist/index.js",
    "module": "dist/index.js",
    "types": "dist/index.d.ts",
    "type": "module",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"

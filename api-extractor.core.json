{
  "$schema": "https://developer.microsoft.com/json-schemas/api-extractor/v7/api-extractor.schema.json",

  "projectFolder": "./packages/core",
  
  "mainEntryPointFilePath": "./packages/core/bin/index.d.ts",

  "compiler": {
    "tsconfigFilePath": "./packages/core/tsconfig.json"
  },

  "apiReport": {
    "enabled": true,
    "reportFolder": "./temp/api-report/",
    "reportFileName": "ecs-framework-core.api.md"
  },

  "docModel": {
    "enabled": true,
    "apiJsonFilePath": "./temp/api-model/ecs-framework-core.api.json"
  },

  "dtsRollup": {
    "enabled": true,
    "untrimmedFilePath": "./temp/rollup/ecs-framework-core.d.ts",
    "publicTrimmedFilePath": "./dist/ecs-framework-core.d.ts"
  },

  "tsdocMetadata": {
    "enabled": false
  },

  "messages": {
    "compilerMessageReporting": {
      "default": {
        "logLevel": "warning"
      }
    },
    "extractorMessageReporting": {
      "default": {
        "logLevel": "warning"
      },
      "ae-missing-release-tag": {
        "logLevel": "none"
      },
      "ae-unresolved-inheritdoc-reference": {
        "logLevel": "none"
      },
      "ae-internal-missing-underscore": {
        "logLevel": "none"
      }
    },
    "tsdocMessageReporting": {
      "default": {
        "logLevel": "warning"
      },
      "tsdoc-undefined-tag": {
        "logLevel": "none"
      }
    }
  },

  "testMode": false,
  "newlineKind": "lf"
}